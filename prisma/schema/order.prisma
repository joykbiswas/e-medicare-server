model Order {
  id              String      @id @default(uuid())
  customerId      String
  status          OrderStatus @default(PLACED)
  shippingAddress String
  totalAmount     Int
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  customer        User        @relation(fields: [customerId], references: [id])
  items           OrderItem[]

  @@map("orders")
}

enum OrderStatus {
  PLACED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}
